{% include '/general/header.twig' %}
<section class="slice slice-lg">
  <div class="container">
    <div class="row mb-6 justify-content-center text-center">
      <div class="col-lg-8 col-md-10">
        <h3 class=" mt-4">{{ 'site.products' | language }}</h3>
        <div class="mt-3">
          <p class="lead lh-180">{{ 'site.products.description' | language }}</p>
        </div>
      </div>
    </div>
    <div class="row mx-lg-n4">
      <div class="row">
        {% set count = types|length %}

        {% if count == 4 or count == 8 %}
          {% set col = 3 %}
        {% elseif count == 3 or count == 7 or count == 6 %}
          {% set col = 4 %}
        {% elseif count == 2 %}
          {% set col = 6 %}
        {% elseif count == 1 %}
          {% set col = 12 %}
        {% else %}
          {% set col = 3 %}
        {% endif %}
        {% for type in types %}

          <div class="col-lg-{{ col }}">
            <div class="card p-2 card-fluid">
              <div class="card-body">
                <h5 class="card-title text-center">{{ type['name'] }}</h5>
                <center>
                  <a type="button" class="btn btn-animated btn-primary btn-animated-x text-white"
                     href="{{ url }}/p/{{ type['type'] }}">
                    <span class="btn-inner--visible">{{ 'site.products.select' | language }}</span>
                    <span class="btn-inner--hidden"><i class="fas fa-arrow-right"></i></span>
                  </a>
                </center>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% include '/general/footer.twig' %}

