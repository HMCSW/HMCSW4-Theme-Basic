

<section class="slice slice-lg bg-primary">
  <div class="shape-container shape-line shape-position-top shape-orientation-inverse">
    <svg width="2560px" height="100px" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
         preserveAspectRatio="none" x="0px" y="0px" viewBox="0 0 2560 100" style="enable-background:new 0 0 2560 100;"
         xml:space="preserve" class="">
                <polygon points="2560 0 2560 100 0 100"></polygon>
            </svg>
  </div>
  <div class="container">
    <div class="row mb-5 justify-content-center text-center">
      <div class="col-lg-6 col-md-12 my-auto">
        <h2 class="text-white">
          {% autoescape %}
            {% set support = 'site.products.support'|language|replace({'@name': config['name']}) %}
            {{ support|raw }}
          {% endautoescape %}
        </h2>
      </div>
      <div class="col-lg-6 col-md-12">
        <div class="mt-2">
          <h3 class="lead lh-180 text-white">{{ 'site.products.support.weHelp' | language }}</h3>
        </div>
        <h4 class="text-white mt-4">
          {% autoescape %}
            {% set email = '<a href="mailto:@email">@email</a>'|replace({'@email': config['support']['support_mail'] }) %}
            {% set telephone = '<a href="tel:@telephone">@telephone</a>'|replace({'@telephone': config['support']['telephone'] }) %}
            {% set contact = 'site.products.support.contact'|language|replace({'@telephone': telephone, '@email': email }) %}
            {{ contact|raw }}
          {% endautoescape %}
        </h4>
      </div>
    </div>
  </div>
</section>