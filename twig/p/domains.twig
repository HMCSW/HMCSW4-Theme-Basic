{% include '/general/header.twig' %}
<section class="slice slice-lg pb-0 bg-section-secondary">
  <div class="container position-relative zindex-100">
    <div class="row mb-5 justify-content-center text-center">
      <div class="col-lg-7 col-md-9">
        <h3 class="h2 lh-170">
          <strong>{{ type['name'] }}</strong><br>
        </h3>
        <h4 class="text-center">{{ 'site.products.domain' | language }}</h4>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-12 mb-lg-n10">

        <div class="pricing-container">
          <div class="col-xl-12">
            <div class="input-group input-group-lg mb-3 col-lg-8 offset-lg-2">
              <input required name="domain" id="domain" type="text" class="form-control" placeholder="example.com" aria-describedby="button-addon1">
              <div class="input-group-append" id="checkButton_enable">
                <button type="button" id="checkButton" onclick="formSend();" class="btn btn-animated btn-primary btn-animated-x">
                  <span class="btn-inner--visible">{{ 'site.products.domain.btn' | language }}</span>
                  <span class="btn-inner--hidden"><i class="fa-regular fa-arrow-right"></i></span>
                </button>
              </div>
              <div class="input-group-append" id="checkButton_disable" style="display:none;" >

                <button type="button" class="btn btn-primary">
                  <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                  <span class="sr-only">Loading...</span>
                </button>

              </div>

            </div>
            <div class="justify-content-center">
              <div class="input-group input-group-lg mb-3 col-lg-8 offset-lg-2">

                <div class="custom-control custom-switch">
                  <input type="checkbox" id="allDomains" class="custom-control-input">
                  <label class="custom-control-label" for="allDomains">{{ 'site.products.domain.showAllTLD' | language }}</label>
                </div>
              </div>


            </div>
            <hr>
            <div class="pricing-container">

              <h4 class="text-center">{{ 'site.products.prizes' | language }}</h4>
              <div class="row">
                {% if type['category']['Domains']['products']|length == 0 %}
                  <div class="col-lg-6 offset-lg-3">
                    <div class="card card-pricing bg-primary border-0 text-center px-3">
                      <div class="card-body">
                        <div class="h4 text-white text-center mb-0">
                          {{ 'site.products.nothingFound' | language }}
                        </div>
                      </div>
                    </div>
                  </div>
                {% else %}
                  <div class="table-responsive">
                    <table class="table table-cards align-items-center" id="domains">
                      <thead>
                      <tr>
                        <th scope="col"></th>
                        <th>{{ 'site.products.prizes.new' | language }}</th>
                        <th>{{ 'site.products.prizes.transfer' | language }}</th>
                        <th>{{ 'site.products.prizes.renew' | language }}</th>
                        <th></th>
                        <th></th>
                      </tr>
                      </thead>
                      <tbody id="domains_body">
                      {% for products in type['category']['Domains']['products'] %}
                        {% if products['promote'] == "true" %}
                          <tr>
                            <th scope="row">{{ products['name'] }}</th>
                            <td>{{ products['amount']|creditsToEuro }}{{ "symbol"|currency }}</td>
                            <td>{{ products['domain']['transfer']|creditsToEuro }}{{ "symbol"|currency }}</td>
                            <td>{{ products['domain']['renew']|creditsToEuro }}
                              {{ "symbol"|currency }} {{ 'general.time.yearly' | language }}</td>
                            <td></td>
                          </tr>
                        {% endif %}
                      {% endfor %}
                      <tr class="table-divider"></tr>
                      </tbody>
                    </table>
                  </div>

                {% endif %}
              </div>
            </div>
            <h5 class="text-center"><b class="text-center">{{ 'site.products.specs.domains.manyMore' | language }}</b></h5>
            <hr />
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- SVG separator -->
  <div class="shape-container shape-line shape-position-bottom">
    <svg width="2560px" height="100px" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
         preserveAspectRatio="none" x="0px" y="0px" viewBox="0 0 2560 100" style="enable-background:new 0 0 2560 100;"
         xml:space="preserve" class="">
                <polygon points="2560 0 2560 100 0 100"></polygon>
            </svg>
  </div>
</section>
<section class="slice slice-lg">
  <div class="container pt-lg-7">
    <div class="row mb-6 justify-content-center text-center">
      <div class="col-lg-8 col-md-10">
        <h3 class=" mt-4">{{ 'site.products.include' | language }}</h3>
        <div class="mt-3">
          <p class="lead lh-180">{{ 'site.products.include.text' | language }}</p>
        </div>
      </div>
    </div>
    <div class="row mx-lg-n4">
      <!-- Features - Col 1 -->
      <div class="col-lg-4 col-md-6 px-lg-4">
        <div class="card hover-scale-110">
          <div class="p-3 d-flex">
            <div>
              <div class="icon icon-shape rounded-circle bg-dark-success text-white mr-4">
                <i class="fas fa-user-clock"></i>
              </div>
            </div>
            <div>
              <span class="h6">{{ 'site.products.box.general.support' | language }}</span>
              <p class="text-sm text-muted mb-0">{{ 'site.products.box.general.support.text' | language }}</p>
            </div>
          </div>
        </div>
      </div>
      <!-- Features - Col 2 -->
      <div class="col-lg-4 col-md-6 px-lg-4">
        <div class="card hover-scale-110 ">
          <div class="p-3 d-flex">
            <div>
              <div class="icon icon-shape rounded-circle bg-info text-white mr-4">
                <i class="fas fa-truck-pickup"></i>
              </div>
            </div>
            <div>
              <span class="h6">{{ 'site.products.box.general.setup' | language }}</span>
              <p class="text-sm text-muted mb-0">{{ 'site.products.box.general.setup.text' | language }}</p>
            </div>
          </div>
        </div>
      </div>
      <!-- Features - Col 3 -->
      <div class="col-lg-4 col-md-6 px-lg-4">

        <div class="card hover-scale-110">
          <div class="p-3 d-flex">
            <div>
              <div class="icon icon-shape rounded-circle bg-warning text-white mr-4">
                <i class="fas fa-crown"></i>
              </div>
            </div>
            <div>
              <span class="h6">{{ 'site.products.box.general.quality' | language }}</span>
              <p class="text-sm text-muted mb-0">{{ 'site.products.box.general.quality.text' | language }}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Features - Col 1 -->
      <div class="col-lg-4 col-md-6 px-lg-4">
        <div class="card hover-scale-110">
          <div class="p-3 d-flex">
            <div>
              <div class="icon icon-shape rounded-circle bg-dark-dark text-white mr-4">
                <i class="fa-solid fa-ethernet"></i>
              </div>
            </div>
            <div>
              <span class="h6">{{ 'site.products.box.domain.dns' | language }}</span>
              <p class="text-sm text-muted mb-0">{{ 'site.products.box.domain.dns.text' | language }}</p>
            </div>
          </div>
        </div>
      </div>
      <!-- Features - Col 2 -->
      <div class="col-lg-4 col-md-6 px-lg-4">
        <div class="card hover-scale-110 ">
          <div class="p-3 d-flex">
            <div>
              <div class="icon icon-shape rounded-circle bg-danger text-white mr-4">
                <i class="fa-solid fa-router"></i>
              </div>
            </div>
            <div>
              <span class="h6">{{ 'site.products.box.domain.dynDNS' | language }}</span>
              <p class="text-sm text-muted mb-0">{{ 'site.products.box.domain.dynDNS.text' | language }}</p>
            </div>
          </div>
        </div>
      </div>
      <!-- Features - Col 3 -->
      <div class="col-lg-4 col-md-6 px-lg-4">

        <div class="card hover-scale-110">
          <div class="p-3 d-flex">
            <div>
              <div class="icon icon-shape rounded-circle bg-primary text-white mr-4">
                <i class="fa-solid fa-comments-question-check"></i>
              </div>
            </div>
            <div>
              <span class="h6">{{ 'site.products.box.domain.dnsHelper' | language }}</span>
              <p class="text-sm text-muted mb-0">{{ 'site.products.box.domain.dnsHelper.text' | language }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

