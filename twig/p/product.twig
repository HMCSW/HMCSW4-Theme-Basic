{% include '/general/header.twig' %}
<section class="slice slice-lg pb-0 bg-section-secondary">
  <div class="container position-relative zindex-100">
    <div class="row mb-5 justify-content-center text-center">
      <div class="col-lg-7 col-md-9">
        <h3 class="h2 lh-170">
          <strong>{{ type['name'] }}</strong><br>
        </h3>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-12 mb-lg-n10">

        <ul class="nav nav-tabs justify-content-center" role="tablist">
          {% for category in type['category'] %}
            <li class="nav-item">
              <a class="nav-link {% if category['default'] == "true" %} active {% endif %}"
                 data-toggle="tab" href="#{{ category['name']|lower|slugify }}" role="tab"
                 aria-controls="{{ category['name'] }}-tab"
                 aria-selected="{% if category['default'] == "true" %} true {% else %} false {% endif %}">{{ category['name'] }}</a>
            </li>
          {% endfor %}
        </ul>
        <br>
        <div class="pricing-container">
          <div class="tab-content">
            {% for category in type['category'] %}
              <div class="tab-pane fade {% if category['default'] == "true" %} show active {% endif %}"
                   id="{{ category['name']|lower|slugify }}" role="tabpanel"
                   aria-labelledby="{{ category['name']|lower|slugify }}-tab">

                <div class="row pricing shadow-none justify-content-center">
                  {% if category['products']|length == 0 %}
                    <div class="col-lg-6">
                      <div class="card card-pricing bg-primary border-0 text-center px-3">
                        <div class="card-body">
                          <div class="h4 text-white text-center mb-0">
                            {{ 'site.products.nothingFound' | language }}
                          </div>
                        </div>
                      </div>
                    </div>
                  {% else %}

                    {% if category['location'] != "" %}
                      <div class="col-lg-12">
                        <h5
                          class="text-center">{{ 'site.products.location'|language|replace({'@location': category['location'] }) }}</h5>
                        <br>
                      </div>
                    {% endif %}

                    {% set count = category['products']|length %}
                    {% if count == 4 or count == 8 %}
                      {% set col = 3 %}
                    {% elseif count == 3 or count == 7 or count == 6 %}
                      {% set col = 4 %}
                    {% elseif count == 2 %}
                      {% set col = 4 %}
                    {% elseif count == 1 %}
                      {% set col = 4 %}
                    {% else %}
                      {% set col = 4 %}
                    {% endif %}
                    {% for products in category['products'] %}
                      <div class="col-lg-{{ col }}">
                        {% if products['promote'] == "true" %}
                          <div
                            class="card card-pricing bg-primary border-0 text-center px-3 shadow hover-scale-105 card-fluid ">
                            <div class="card-header py-5 delimiter-bottom">
                              <span class="h5 text-white text-center">{{ products['name'] }}</span>
                            </div>
                            <div class="card-body">
                              <ul class="list-unstyled text-white text-sm opacity-8 mb-4">
                                {% include '/p/productInfo.twig' %}
                              </ul>
                              <hr class="divider divider-fade"/>
                              {% if products['discount'] == 0 %}
                                <div class="h5 text-white text-center mb-0">
                                  <span class="price font-weight-bolder">
                                    {{ products['amount']|creditsToEuro }}{{ "symbol"|currency }}
                                    {% if products['period'] == "monthly" %}
                                      {{ 'general.time.monthly' | language }}
                                    {% elseif products['period'] == "yearly" %}
                                      {{ 'general.time.yearly' | language }}
                                    {% elseif products['period'] == "oneTime" %}
                                      {{ 'general.time.oneTime' | language }}
                                    {% endif %}
                                  </span>
                                </div>
                              {% else %}
                                <div class="h5 text-center mb-0"><span
                                    class="price font-weight-bolder"><s>{{ products['amount']|creditsToEuro }}{{ "symbol"|currency }}</s></span>
                                </div>
                                <div class="h5 text-center mb-0">
                                  <span class="price font-weight-bolder">
                                    {{ products['discount']|creditsToEuro }}{{ "symbol"|currency }}
                                    {% if products['period'] == "monthly" %}
                                      {{ 'general.time.monthly' | language }}
                                    {% elseif products['period'] == "yearly" %}
                                      {{ 'general.time.yearly' | language }}
                                    {% elseif products['period'] == "oneTime" %}
                                      {{ 'general.time.oneTime' | language }}
                                    {% endif %}
                                  </span>
                                </div>
                              {% endif %}

                              {% if products['setupFee'] != 0 %}
                                <div class="h5 text-center mb-0">
                                  <span class="price font-weight-bolder">
                                    +{{ products['setupFee']|creditsToEuro }}{{ "symbol"|currency }}
                                    {{ 'site.products.setupFee' | language }}
                                  </span>
                                </div>
                              {% endif %}
                              <br>

                              <button type="button" onclick="addToCart(this.id);" id="{{ products['product_id'] }}"
                                      class="btn btn-white btn-animated btn-animated-x">
                                <span class="btn-inner--visible">{{ 'site.products.buyNow' | language }}</span>
                                <span class="btn-inner--hidden"><i
                                    class="fa-regular fa-shopping-cart"></i></span>
                              </button>
                            </div>
                          </div>
                        {% else %}



                          <div class="card card-pricing border-0 text-center px-3 shadow hover-scale-105 card-fluid">
                            <div class="card-header py-5 delimiter-bottom">
                              <span class="h5 text-center">{{ products['name'] }}</span>
                            </div>
                            <div class="card-body">
                              <ul class="list-unstyled text-sm mb-4">
                                {% include '/p/productInfo.twig' %}
                              </ul>
                              <hr class="divider divider-fade"/>
                              {% if products['discount'] == 0 %}
                                <div class="h5 text-center">
                                  <span class="price font-weight-bolder">
                                    {{ products['amount']|creditsToEuro }}{{ "symbol"|currency }}
                                    {% if products['period'] == "monthly" %}
                                      {{ 'general.time.monthly' | language }}
                                    {% elseif products['period'] == "yearly" %}
                                      {{ 'general.time.yearly' | language }}
                                    {% elseif products['period'] == "oneTime" %}
                                      {{ 'general.time.oneTime' | language }}
                                    {% endif %}
                                  </span>
                                </div>
                              {% else %}
                                <div class="h5 text-center mb-0"><span
                                    class="price font-weight-bolder"><s>{{ products['amount']|creditsToEuro }}{{ "symbol"|currency }}</s></span>
                                </div>
                                <div class="h5 text-center mb-0">
                                  <span class="price font-weight-bolder">
                                    {{ products['discount']|creditsToEuro }}{{ "symbol"|currency }}
                                    {% if products['period'] == "monthly" %}
                                      {{ 'general.time.monthly' | language }}
                                    {% elseif products['period'] == "yearly" %}
                                      {{ 'general.time.yearly' | language }}
                                    {% elseif products['period'] == "oneTime" %}
                                      {{ 'general.time.oneTime' | language }}
                                    {% endif %}
                                  </span>
                                </div>
                              {% endif %}
                              {% if products['setupFee'] != 0 %}
                                <div class="h6 text-center mb-0">
                                  <span class="price font-weight-bolder">
                                    +{{ products['setupFee']|creditsToEuro }}{{ "symbol"|currency }}
                                      {{ 'site.products.setupFee' | language }}
                                  </span>
                                </div>
                              {% endif %}
                              <br>


                              <button type="button" onclick="addToCart(this.id);" id="{{ products['product_id'] }}"
                                      class="btn btn-sm btn-warning btn-animated btn-animated-x">
                                <span class="btn-inner--visible">{{ 'site.products.buyNow' | language }}</span>
                                <span class="btn-inner--hidden"><i
                                    class="fa-regular fa-shopping-cart"></i></span>
                              </button>
                            </div>
                          </div>
                        {% endif %}
                      </div>
                    {% endfor %}
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% include "/p/modals.twig" %}

{% include '/general/footer.twig' %}
