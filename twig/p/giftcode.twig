{% include '/general/header.twig' %}
<section class="slice slice-lg pb-0 bg-section-secondary">
  <div class="container position-relative zindex-100">
    <div class="row mb-5 justify-content-center text-center">
      <div class="col-lg-7 col-md-9">
        <h3 class="h2 lh-170">{{ 'site.products.giftcodes' | language }}</h3>
        <h4 class="h3">{{ 'site.products.giftcodes.description' | language }}</h4>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-12 mb-lg-n10">

        <div class="pricing-container">
          <div class="card">
            <div class="card-body">
              <div class="row align-items-center justify-content-center">
                <div class="col-lg-4">

                    <div class="form-group text-center">
                      <label for="amount"
                             class="form-control-label">{{ 'site.products.giftcodes.description.amount' | language }}</label>


                      <div class="input-group input-group-merge">
                        <input id="amount" name="amount" type="text" class="form-control form-control-prepend"
                               placeholder="100.00">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fa fa-euro-sign"></i></span>
                        </div>
                      </div>
                    </div>

                    <h5 class="text-center">

                      <button type="button" onclick="addToCart(document.getElementById('amount').value);" class="btn btn-warning btn-animated btn-animated-x">
                        <span class="btn-inner--visible">{{ 'site.products.buyNow' | language }}</span>
                        <span class="btn-inner--hidden">
                                                    <i class="fa-regular fa-shopping-cart"></i>
                                                </span>
                      </button>
                    </h5>


                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
