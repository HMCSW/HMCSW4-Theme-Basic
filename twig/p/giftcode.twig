{% include '/general/header.twig' %}
<section class="container py-5 mt-5 mb-lg-3 mb-xl-4 mb-xxl-5">
  <div class="row pt-sm-2 pt-lg-0">
    <section class="card border-0 p-md-2 p-xl-3 p-xxl-4 mb-4">
      <div class="card-body d-flex flex-column ">
        <div class="align-items-center justify-content-center mb-4">
          <h2 class="h3 mb-0 text-center"><strong>{{ 'site.products.giftcodes' | language }}</strong></h2>
          <h4 class="text-center">{{ 'site.products.giftcodes.description' | language }}</h4>
        </div>
        <div class="row align-items-center justify-content-center mb-3 ">
          <div class=" col-lg-8">
            <div class="input-group">
              <span class="input-group-text"><i class="fa fa-euro"></i></span>
              <input class="form-control" type="text" name="amount" min="1" required
                     placeholder="{{ 'site.products.giftcodes.description.amount' | language }}"
                     id="amount">
            </div>
          </div>
        </div>
        <div class="row align-items-center justify-content-center">
          <div class="col text-center">
            <button class="btn align-self-end btn-primary w-25"
                    onclick="addToCart(document.getElementById('amount').value);"
                    type="button">{{ 'site.products.buyNow' | language }}</button>
          </div>
        </div>
      </div>
    </section>
  </div>
</section>

