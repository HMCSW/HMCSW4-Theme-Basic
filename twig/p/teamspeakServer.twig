{% include '/general/header.twig' %}
<section class="slice slice-lg pb-0 bg-section-secondary">
  <div class="container position-relative zindex-100">
    <div class="row mb-5 justify-content-center text-center">
      <div class="col-lg-7 col-md-9">
        <h3 class="h2 lh-170">{{ type['name'] }}</h3>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-12 mb-lg-n10">

        <div class="pricing-container">
          <div class="card">
            <div class="card-body">
              <div class="row align-items-center justify-content-center">
                <div class="col-lg-7">
                  <div class="form-group text-center">
                    <label for="slots">Slots</label>
                    <input oninput="calculateCredits();" name="slots" min="{{ info['min'] }}" max="{{ info['max'] }}"
                           value="{{ info['min']+10 }}" type="range" class="custom-range text-center" id="slots">
                  </div>

                  <h5 class="text-center">

                    <button type="button" id="{{ info['product_id'] }}"
                            onclick="addToCart(this.id, document.getElementById('slots').value)"
                            class="btn btn-warning btn-animated btn-animated-x">
                      <span class="btn-inner--visible">{{ 'site.products.buyNow'|language }}</span>
                      <span class="btn-inner--hidden">
                                                    <i class="fa-regular fa-shopping-cart"></i>
                                                </span>
                    </button>


                </div>
                <div class="col-lg-1">
                  <hr class="divider divider-vertical d-none d-md-none d-sm-none d-lg-block d-xl-block"/>
                </div>
                <div class="col-lg-4">
                  <h4 class="text-center" id="prizeDiv">{{ info['defaultCredits'] }}
                    {{ "symbol"|currency }} {{ 'general.time.monthly'|language }}</h4>
                  <h4 class="text-center" id="slotsDiv">{{ info['min']+10 }} Slots</h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- SVG separator -->
  <div class="shape-container shape-line shape-position-bottom">
    <svg width="2560px" height="100px" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
         preserveAspectRatio="none" x="0px" y="0px" viewBox="0 0 2560 100" style="enable-background:new 0 0 2560 100;"
         xml:space="preserve" class="">
                <polygon points="2560 0 2560 100 0 100"></polygon>
            </svg>
  </div>
</section>
<section class="slice slice-lg">
  <div class="container pt-lg-7">
    <div class="row mb-6 justify-content-center text-center">
      <div class="col-lg-8 col-md-10">
        <h3 class=" mt-4">{{ 'site.products.include' | language }}</h3>
        <div class="mt-3">
          <p class="lead lh-180">{{ 'site.products.include.text' | language }}</p>
        </div>
      </div>
    </div>
    <div class="row mx-lg-n4">
      <div class="col-lg-4 col-md-6 px-lg-4">
        <div class="card hover-scale-110">
          <div class="p-3 d-flex">
            <div>
              <div class="icon icon-shape rounded-circle bg-dark-success text-white mr-4">
                <i class="fas fa-user-clock"></i>
              </div>
            </div>
            <div>
              <span class="h6">{{ 'site.products.box.general.support' | language }}</span>
              <p class="text-sm text-muted mb-0">{{ 'site.products.box.general.support.text' | language }}</p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 px-lg-4">
        <div class="card hover-scale-110 ">
          <div class="p-3 d-flex">
            <div>
              <div class="icon icon-shape rounded-circle bg-info text-white mr-4">
                <i class="fas fa-truck-pickup"></i>
              </div>
            </div>
            <div>
              <span class="h6">{{ 'site.products.box.general.setup' | language }}</span>
              <p class="text-sm text-muted mb-0">{{ 'site.products.box.general.setup.text' | language }}</p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 px-lg-4">

        <div class="card hover-scale-110">
          <div class="p-3 d-flex">
            <div>
              <div class="icon icon-shape rounded-circle bg-warning text-white mr-4">
                <i class="fas fa-crown"></i>
              </div>
            </div>
            <div>
              <span class="h6">{{ 'site.products.box.general.quality' | language }}</span>
              <p class="text-sm text-muted mb-0">{{ 'site.products.box.general.quality.text' | language }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

