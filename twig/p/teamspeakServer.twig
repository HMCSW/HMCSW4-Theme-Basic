{% include '/general/header.twig' %}
<section class="slice slice-lg pb-0 bg-section-secondary">
  <div class="container position-relative zindex-100">
    <div class="row mb-5 justify-content-center text-center">
      <div class="col-lg-7 col-md-9">
        <h3 class="h2 lh-170">{{ type['name'] }}</h3>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-12 mb-lg-n10">

        <div class="pricing-container">
          <div class="card">
            <div class="card-body">
              <div class="row align-items-center justify-content-center">
                <div class="col-lg-7">
                  <div class="form-group text-center">
                    <label for="slots">Slots</label>
                    <input oninput="calculateCredits();" name="slots" min="{{ info['min'] }}" max="{{ info['max'] }}"
                           value="{{ info['min']+10 }}" type="range" class="custom-range text-center" id="slots">
                  </div>

                  <h5 class="text-center">

                    <button type="button" id="{{ info['product_id'] }}"
                            onclick="addToCart(this.id, document.getElementById('slots').value)"
                            class="btn btn-warning btn-animated btn-animated-x">
                      <span class="btn-inner--visible">{{ 'site.products.buyNow'|language }}</span>
                      <span class="btn-inner--hidden">
                                                    <i class="fa-regular fa-shopping-cart"></i>
                                                </span>
                    </button>


                </div>
                <div class="col-lg-1">
                  <hr class="divider divider-vertical d-none d-md-none d-sm-none d-lg-block d-xl-block"/>
                </div>
                <div class="col-lg-4">
                  <h4 class="text-center" id="prizeDiv">{{ info['defaultCredits'] }}
                    {{ "symbol"|currency }} {{ 'general.time.monthly'|language }}</h4>
                  <h4 class="text-center" id="slotsDiv">{{ info['min']+10 }} Slots</h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% include "/p/modals.twig" %}
