{% include '/general/header_noNav.twig' %}
<section>
  <div class="container d-flex flex-column">
    <div class="row align-items-center justify-content-center min-vh-100">
      <div class="col-md-6 col-lg-5 col-xl-4 py-6 py-md-0">
        <div>
          <div class="mb-5 text-center">
            <div class="mb-5 text-center">
              <h6 class="h3 mb-1">{{ 'site.auth.forgotPW.testCode' | language }}</h6>
              <p class="text-muted mb-0">{{ 'site.auth.forgotPW.testCode.description' | language }}</p>
            </div>
          </div>
          <span class="clearfix"></span>

          {% include '/general/actionMessage.twig' %}


          <form method="post" onsubmit="send();">
            <input type="hidden" name="action" value="testCode">
            <input type="hidden" name="csrf" value="{{ csrf }}">


            <div class="form-group">
              <div class="pb-3 mb-3">
                <div class="position-relative"><i class="fa fa-code fs-lg position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                  <input class="form-control form-control-lg ps-5" type="text" id="code" name="code" placeholder="{{ 'general.form.forgotPW.code.placeholder' | language }}" required="">
                </div>
              </div>
            </div>

            <div class="mt-4">
              <div id="form">
                <button class="btn btn-lg btn-primary w-100 mb-4" type="submit">{{ 'site.forgotPW.form.testCode' | language }}
                </button>
              </div>
              <div id="loader" style="display: none">
                <button type="button" class="btn btn-lg btn-primary w-100 mb-4 pe-none">
                  <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                  {{ 'site.forgotPW.form.testCode' | language }}...
                </button>
              </div>
            </div>
          </form>

          <form method="post" class="justify-content-center text-center">
            <input type="hidden" name="action" value="reTry">
            <input type="hidden" name="csrf" value="{{ csrf }}">

              <button class="btn btn-sm btn-info w-50 mb-4 " type="submit">{{ 'site.forgotPW.form.reTry' | language }}</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
{% include '/general/footer_empty.twig' %}