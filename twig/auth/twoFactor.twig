{{ '<script type="application/javascript" src="{{ url }}/assets/js/simpleWebauthn/index.umd.min.js"></script>'|addJS(true) }}
{% include '/general/header_noNav.twig' %}
<section>
    <div class="container d-flex flex-column">
        <div class="row align-items-center justify-content-center min-vh-100">
            <div class="col-md-6 col-lg-5 col-xl-4 py-6 py-md-0">
                <div style="display: none" id="enterCode-twofactor">
                    <div class="mb-5 text-center">
                        <div class="mb-5 text-center">
                            <h6 class="h3 mb-1">{{ 'site.auth.twoFactor' | language }}</h6>
                            <p class="text-muted mb-0">{{ 'site.auth.twoFactor.description' | language }}</p>
                        </div>
                    </div>
                    <span class="clearfix"></span>

                    {% include '/general/actionMessage.twig' %}

                    <div class="justify-content-center align-middle text-center" id="code-loader-twofactor"
                         style="display: none">
                        <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>

                    <div id="code-form-twofactor" style="display: none">

                        <div class="form-group">
                            <label for="code-twofactor"
                                   class="form-control-label">{{ 'site.auth.twoFactor.form.code' | language }}</label>

                            <input type="text" class="form-control" id="code-twofactor"
                                   placeholder="ABC 123 DFG 456">

                        </div>
                        <div class="mt-4">
                            <button class="btn btn-lg btn-primary w-100 mb-4" id="submit-code-twofactor"
                                    type="button">{{ 'site.auth.twoFactor.submitBtn' | language }}
                            </button>
                        </div>
                        <button class="btn btn-sm btn-info w-50 mb-4" id="selectOtherMethod-twofactor"
                                type="button">{{ 'site.auth.twoFactor.cancelBtn' | language }}</button>

                    </div>
                </div>
                <div style="display: none" id="selectMethod-twofactor">
                    <div class="mb-5 text-center">
                        <div class="mb-5 text-center">
                            <h6 class="h3 mb-1">{{ 'site.auth.twoFactor' | language }}</h6>
                            <p class="text-muted mb-0">{{ 'site.auth.twoFactor-type.description' | language }}</p>
                        </div>
                    </div>

                    <span class="clearfix"></span>

                    {% include '/general/actionMessage.twig' %}

                    <div class="col-lg-12" id="fidoFailMessage-twofactor" style="display: none">
                        <div class="alert alert-group alert-danger alert-icon" role="alert">
                            <div class="alert-group-prepend">
                                    <span class="alert-group-icon text-">
                                        <i class="fa-duotone fa-exclamation-triangle"></i>
                                    </span>
                            </div>
                            <div class="alert-content">
                                {{ 'site.auth.twoFactor.fido2Failed'|language }}
                            </div>
                            <div class="alert-action">
                                <button type="button" class="btn btn-danger"
                                        id="fidoFailBtn-twofactor">{{ 'site.auth.twoFactor.fido2Failed.retry'|language }}</button>
                            </div>
                        </div>
                    </div>


                    <div class="justify-content-center align-middle text-center" id="allMethodsLoader-twofactor"
                         style="display: none">
                        <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>

                    <div class="form-check" id="exampleMethodCheck-twofactor" style="display: none">
                        <input class="form-check-input" type="radio">
                        <label class="form-check-label"></label>
                    </div>

                    <div id="fidoInfo-twofactor" style="display: none">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title text-center"><i class="fa-duotone fa-key"></i></h4>
                                <p class="card-text text-center">{{ 'site.auth.twoFactor.fido2'|language }}</p>
                                <button type="button" id="cancelFido-twofactor" class="btn btn-primary w-100 btn-sm" style="display: none">{{ 'site.auth.twoFactor.fido2.other'|language }}</button>
                            </div>
                        </div>
                    </div>

                    <div class="form-group" id="allMethods-twofactor" style="display: none">


                    </div>

                    <div class="col-lg-12" id="noMethod-twofactor" style="display: none">
                        <div class="alert alert-group alert-danger alert-icon" role="alert">
                            <div class="alert-group-prepend">
                                        <span class="alert-group-icon text-">
                                            <i class="fa-duotone fa-exclamation-triangle"></i>
                                        </span>
                            </div>
                            <div class="alert-content">
                                {{ 'site.auth.action.message.noTwoFactorMethodAvailable' | language }}
                            </div>
                        </div>
                    </div>


                    <button class="btn btn-lg btn-primary w-100 mb-4 mt-4 text-center" style="display: none;" id="selectBTN-twofactor"
                            type="button">{{ 'site.auth.twoFactor.selectBtn' | language }}
                    </button>

                </div>
            </div>
        </div>
    </div>
</section>
{% include '/general/footer_empty.twig' %}