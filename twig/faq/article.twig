{% include '/general/header.twig' %}
<section class="container pt-5 mt-5">
    <nav aria-label="breadcrumb">
        <ol class="pt-lg-3 pb-lg-4 pb-2 breadcrumb">
            <li class="breadcrumb-item"><a href="{{ url }}">{{ 'header.home' | language }}</a></li>
            <li class="breadcrumb-item"><a href="{{ url }}/faq">{{ 'site.faq' | language }}</a></li>
            <li class="breadcrumb-item"><a href="{{ url }}/faq/{{ category['slug'] }}">{{ category['title'] }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ article['title'] }}</li>
        </ol>
    </nav>


    <div class="row justify-content-center mb-4">
        <div class="col-lg-9 col-xl-9 pe-lg-4 pe-xl-0">
            <h1 class="pb-2 pb-lg-3">{{ article['title'] }}</h1>
            <p class="fs-lg mb-4">{{ article['text']|raw }}</p>
            <div class="border-top border-bottom py-4" id="author">
                <div class="d-flex align-items-start py-2">
                    <img class="d-block rounded-circle mb-3"
                         alt="{{ article['user']['firstname'] }} {{ article['user']['lastname'] }}"
                         src="{{ article['user']['icon'] }}" width="56">
                    <div class="d-md-flex w-100 ps-4">
                        <div style="max-width: 26rem;">
                            <h3 class="h5 mb-2">{{ article['user']['firstname'] }} {{ article['user']['lastname'] }}</h3>
                            <p class="fs-sm mb-0">{{ article['lastupdate_at']|date }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 ml-lg-auto">
            <div data-toggle="sticky" data-sticky-offset="30">
                <div class="card">
                    <div class="card-header">
                        <span class="h6 mb-0">{{ 'site.faq.Categories' | language }}</span>
                    </div>

                    {% for item in AllCategory %}
                        <div class="card-body m-3 p-0">
                            <a href="{{ url }}/faq/{{ item['slug'] }}" data-scroll-to data-scroll-to-offset="50"
                               class="list-group-item list-group-item-action d-flex justify-content-between">
                                <div>
                                    <span>{{ item['title'] }}</span>
                                </div>
                                <div>
                                    <i class="fa-regular fa-chevron-right"></i>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="card mt-4">
                <div class="card-header d-flex justify-content-between">
                    <div>
                        <span class="h6 mb-0">{{ 'site.faq.allTopics' | language }}</span>
                    </div>
                    <a href="{{ url }}/faq/{{ category['slug'] }}"
                       class="text-muted text-decoration-none">{{ 'site.faq.allTopics.showAll' | language }} â€º</a>
                </div>
                {% for item in AllCategoryArticle %}
                    <div class="card-body m-3 p-0">
                        <a href="{{ url }}/faq/{{ category['slug'] }}/{{ item['slug'] }}" data-scroll-to
                           data-scroll-to-offset="50"
                           class="list-group-item list-group-item-action d-flex justify-content-between">
                            <div>
                                <span>{{ item['title'] }}</span>
                            </div>
                            <div>
                                <i class="fa-regular fa-chevron-right"></i>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    </div>
</section>
{% include '/general/footer.twig' %}