{% include '/general/header.twig' %}
{% include 'cp/nav.twig' %}
<section class="slice slice-sm bg-section-secondary">
  <div class="container">
    <div class="row justify-content-center">
      {% if config['dev_mode'] %}
        <div class="col-lg-12">
          <div class="alert alert-group alert-warning alert-icon justify-content-center" role="alert">
            <div class="alert-group-prepend">
                        <span class="alert-group-icon text-">
                            <i class="fa fa-exclamation-triangle"></i>
                        </span>
            </div>
            <div class="alert-content">
              <b>The DevMode is activated! Expect higher loading times. Caching is disabled. Do not use in productive
                mode. </b>
            </div>
          </div>
        </div>
      {% endif %}

      {% include 'cp/terminateUser.twig' %}

      {% if userData['email_activation'] != "true" %}
        <div class="col-lg-12">
          <div class="alert alert-group alert-warning alert-icon" role="alert">
            <div class="alert-group-prepend">
                                <span class="alert-group-icon text-">
                                    <i class="fa-regular fa-triangle-exclamation"></i>
                                </span>
            </div>
            <div class="alert-content">
              {{ 'site.cp.settings.emailNotVerified' | language }}
            </div>
            <div class="alert-action">
              <form method="post">
                <input type="hidden" name="action" value="sendVerifyEmail">
                <input type="hidden" name="csrf" value="{{ csrf }}">
                <button type="submit" class="btn btn-neutral"
                        aria-label="Action Label">{{ 'site.cp.settings.emailNotVerified.btn' | language }}</button>
              </form>
            </div>
          </div>
        </div>
      {% endif %}

      <div class="col-lg-3 d-none d-lg-block d-xl-block">

        <div class="card hover-translate-y-n3 hover-shadow-lg overflow-hidden card-fluid">
          <div class="card-body">
            <h6 class="text-center"><i class="fas fa-2x fa-server"></i></h6>
            <h5 class="text-center">{{ 'site.cp.index.card.services' | language }}</h5>
            <h4 class="text-center">{{ stats['service_count'] }}</h4>
          </div>
        </div>
      </div>
      <div class="col-lg-3 d-none d-lg-block d-xl-block">

        <div class="card hover-translate-y-n3 hover-shadow-lg overflow-hidden card-fluid">
          <div class="card-body">
            <h6 class="text-center"><i class="fas fa-2x fa-file-invoice"></i></h6>
            <h5 class="text-center">{{ 'site.cp.index.card.invoices' | language }}</h5>
            <h4 class="text-center">{{ stats['invoice_count'] }}</h4>
          </div>
        </div>
      </div>
      <div class="col-lg-3 d-none d-lg-block d-xl-block">

        <div class="card hover-translate-y-n3 hover-shadow-lg overflow-hidden card-fluid">
          <div class="card-body">
            <h6 class="text-center"><i class="fas fa-2x fa-envelope-open-text"></i></h6>
            <h5 class="text-center">{{ 'site.cp.index.card.tickets' | language }}</h5>
            <h4 class="text-center">{{ stats['ticket_count'] }}</h4>
          </div>
        </div>
      </div>

      <div class="col-lg-3">
        <div class="card hover-translate-y-n3 hover-shadow-lg overflow-hidden card-fluid">
          <div class="card-body">
            <h6 class="text-center"><i class="fas fa-2x fa-wallet"></i></h6>
            <h5 class="text-center">{{ 'site.cp.index.card.monthly' | language }}</h5>
            <h4 class="text-center">{{ stats['monthly']|creditsToEuro }}{{ "symbol"|currency }}</h4>
          </div>
        </div>
      </div>

      <div class="col-xl-12">
        <div class="card card-fluid">
          <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
              <div class="text-center">
                <h5 class="d-block h5 mb-0 text-center">{{ 'site.cp.index.news' | language }}</h5>
              </div>
            </div>

          </div>
          <div class="card-body">
            <div class="row">
              {% for article in news %}
                <div class="col-lg-6">
                  <div class="card hover-translate-y-n3 hover-shadow-lg overflow-hidden">
                    <div class="card-body py-4">
                      <small class="d-block text-sm mb-2">{{ article['created_at'] }}</small>
                      <a href="{{ url }}/news/{{ article['slug'] }}"
                         class="h5 stretched-link lh-150">{{ article['title'] }}</a>
                      <p class="mt-3 mb-0 lh-170">{{ article['content'] }}...</p>
                    </div>
                    <div class="card-footer border-0 delimiter-top">
                      <div class="row align-items-center">
                        <div class="col-auto">
                          <span class="text-sm mb-0 avatar-content">{{ article['author'] }}</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% include '/general/footer.twig' %}