{% include '/general/header.twig' %}
<div class="container-fluid">
    <div class="row flex-nowrap">
        {% include '/cp/sideNav.twig' %}
        <div class="col py-3">
            <div class="container">
                {% include 'cp/terminateUser.twig' %}
                <div class="row">
                    <div class="col-lg-2 d-none d-lg-block d-xl-block">
                        <div class="card hover-translate-y-n3 hover-shadow-lg overflow-hidden card-fluid">
                            <div class="card-body">
                                <h6 class="text-center"><i class="fas fa-2x fa-server"></i></h6>
                                <h5 class="text-center">{{ 'site.cp.index.card.services' | language }}</h5>
                                <h4 class="text-center">{{ stats['service_count'] }}</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 d-none d-lg-block d-xl-block">

                        <div class="card hover-translate-y-n3 hover-shadow-lg overflow-hidden card-fluid">
                            <div class="card-body">
                                <h6 class="text-center"><i class="fas fa-2x fa-file-invoice"></i></h6>
                                <h5 class="text-center">{{ 'site.cp.index.card.invoices' | language }}</h5>
                                <h4 class="text-center">{{ stats['invoice_count'] }}</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 d-none d-lg-block d-xl-block">

                        <div class="card hover-translate-y-n3 hover-shadow-lg overflow-hidden card-fluid">
                            <div class="card-body">
                                <h6 class="text-center"><i class="fas fa-2x fa-envelope-open-text"></i></h6>
                                <h5 class="text-center">{{ 'site.cp.index.card.tickets' | language }}</h5>
                                <h4 class="text-center">{{ stats['ticket_count'] }}</h4>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <div class="card hover-translate-y-n3 hover-shadow-lg overflow-hidden card-fluid">
                            <div class="card-body">
                                <h6 class="text-center"><i class="fas fa-2x fa-wallet"></i></h6>
                                <h5 class="text-center">{{ 'site.cp.index.card.monthly' | language }}</h5>
                                <h4 class="text-center">{{ stats['monthly']|creditsToEuro }}{{ "symbol"|currency }}</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="card hover-translate-y-n3 hover-shadow-lg overflow-hidden card-fluid">
                            <div class="card-body">
                                <h6 class="text-center"><i class="fas fa-2x fa-hands-helping"></i></h6>
                                <h5 class="text-center">{{ 'header.supportPin' | language }}</h5>
                                <h4 class="text-center">

                                    {% if config['support']['supportpin']['enabled'] %}
                                        <h6 class="text-center">{{ supportPin }}</h6>
                                        <form method="post" class="text-center">
                                            <input type="hidden" name="csrf" value="{{ csrf }}">
                                            <input type="hidden" name="G_action" value="newSupportPin">
                                            <button type="submit" class="btn btn-secondary btn-sm rounded-circle btn-icon-only">
                                                            <span class="btn-inner--hidden">
                                                                <i class="fas fa-sync"></i>
                                                            </span>
                                            </button>
                                        </form>
                                    {% else %}
                                        <h6 class="text-center">{{ 'header.supportPin.disabled' | language }}</h6>
                                    {% endif %}

                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row  py-3">
                <div class="col-xl-12">
                    <div class="card card-fluid">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-center">
                                    <h5 class="d-block h5 mb-0 text-center">{{ 'site.cp.index.news' | language }}</h5>
                                </div>
                            </div>

                        </div>
                        <div class="card-body">
                            <div class="row">
                                {% for article in news %}
                                    <div class="col-lg-6">
                                        <div class="card hover-translate-y-n3 hover-shadow-lg overflow-hidden">
                                            <div class="card-body py-4">
                                                <small class="d-block text-sm mb-2">{{ article['created_at'] }}</small>
                                                <a href="{{ url }}/news/{{ article['slug'] }}"
                                                   class="h5 stretched-link lh-150">{{ article['title'] }}</a>
                                                <p class="mt-3 mb-0 lh-170">{{ article['content'] }}...</p>
                                            </div>
                                            <div class="card-footer border-0 delimiter-top">
                                                <div class="row align-items-center">
                                                    <div class="col-auto">
                                                        <span class="text-sm mb-0 avatar-content">{{ article['author'] }}</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% include '/general/footer.twig' %}