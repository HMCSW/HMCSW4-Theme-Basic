{% if service['locked'] %}
  <h6 class="text-center"><i class="fas fa-lock fa-2x"></i></h6>
{% else %}
  <h6 class="text-center"><i class="fas fa-lock-open fa-2x"></i></h6>
{% endif %}
{% if "team.service.lock"|checkServicePermission %}
  <h6 class="text-center">{{ 'site.cp.service.locked' | language }}</h6>
  <h6 class="text-center">
    <form method="post" class="text-center">
      <input type="hidden" name="csrf" value="{{ csrf }}">
      <input type="hidden" name="action" value="lockService">
      <div class="custom-control custom-switch">
        <input type="checkbox" name="lock" class="form-check-input text-center" id="lockSwitch"
               onChange="this.form.submit()" {% if service['locked'] %} checked {% endif %}>
        <label class="form-check-label text-center" for="lockSwitch"></label>
      </div>
    </form>
  </h6>
  <br>
{% endif %}