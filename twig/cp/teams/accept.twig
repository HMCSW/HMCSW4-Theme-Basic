{% include '/general/header.twig' %}
<div class="container-fluid">
    <div class="row flex-nowrap">
        {% include '/cp/sideNav.twig' %}
        <div class="col-lg-9 pt-4 pb-2 pb-sm-4">
            {% include 'general/actionMessage.twig' %}
            {% include 'cp/terminateUser.twig' %}
            <section class="card p-md-2 p-xl-3 p-xxl-4 mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center"><i
                                class="fa fa-people-arrows text-primary lead pe-1 me-2"></i>
                        <h2 class="h4 mb-0">{{ 'site.cp.tab.teams' | language }}</h2>
                        <div class="btn-group me-2 mb-2 ms-auto" role="group" aria-label="Settings group">
                            <a href="{{ dashURL }}/teams" class="btn btn-dark btn-icon">
                                <i class="fa-solid fa-arrow-left"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
            <section class="card py-1 p-md-2 p-xl-3 p-xxl-4 mb-4">
                <div class="card-body">
                    <div class="card-header">
                        <h5>{{ 'site.cp.teams.accept' | language }}</h5>
                        <h6>{{ 'site.cp.teams.accept.description'|language|replace({'@name': team['name'] }) }}</h6>
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-center g-3">
                            <div class="col-lg-3 col-md-12">
                                <form method="post">
                                    <input type="hidden" name="csrf" value="{{ csrf }}">
                                    <input type="hidden" name="action" value="acceptTeam">
                                    <button type="submit" class="btn btn-success w-100"><i
                                                class="fa-regular fa-check"></i>{{ 'site.cp.teams.accept.acceptBtn' | language }}
                                    </button>
                                </form>
                            </div>
                            <div class="col-lg-3 col-md-12 ">
                                <form method="post">
                                    <input type="hidden" name="csrf" value="{{ csrf }}">
                                    <input type="hidden" name="action" value="denyTeam">
                                    <button type="submit" class="btn btn-danger w-100"><i
                                                class="fa-regular fa-circle-x"></i>{{ 'site.cp.teams.accept.denyBtn' | language }}
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{% include '/general/footer.twig' %}