{% include '/general/header.twig' %}
<div class="container-fluid">
    <div class="row flex-nowrap">
        {% include '/cp/teams/sideNav.twig' %}
        <div class="col py-3">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-12">
                        {% if action != false %}
                            {% if action['success'] == false %}
                                {% set alert_color = "danger" %} {% set alert_icon = "exclamation-triangle" %}
                            {% else %}
                                {% set alert_color = "success" %} {% set alert_icon = "check" %}
                            {% endif %}
                            <div class="alert alert-group alert-{{ alert_color }} alert-icon" role="alert">
                                <div class="alert-group-prepend">
                                        <span class="alert-group-icon text-">
                                            <i class="fas fa-{{ alert_icon }}"></i>
                                        </span>
                                </div>
                                <div class="alert-content">
                                    {{ action['message'] | language }}
                                </div>

                            </div>
                        {% endif %}
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="actions-toolbar py-2 mb-4">
                                    <div class="row">
                                        <div class="col-6">
                                            <h5 class="mb-1">{{ 'site.cp.teams.sshKeys' | language }}</h5>
                                            <p class="text-sm text-muted mb-0">{{ 'site.cp.teams.sshKeys.description' | language }}</p>
                                        </div>
                                        <div class="col-6 text-right">
                                            <button type="submit" data-toggle="modal" data-target="#key-add"
                                                    class="btn btn-lg btn-primary text-right">{{ 'site.cp.teams.sshKeys.add.form.btn' | language }}</button>

                                        </div>
                                    </div>
                                </div>

                                <div class="modal fade" id="key-add" tabindex="-1" role="dialog">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <form method="post">
                                                <input type="hidden" name="action" value="addSSHKey">
                                                <input type="hidden" name="csrf" value="{{ csrf }}">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">{{ 'site.cp.teams.sshKeys.add' | language }}</h5>
                                                    <button type="button" class="btn" data-dismiss="modal"
                                                            aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row">
                                                        <div class="form-group col-md-12">
                                                            <label for="input-name"
                                                                   class="form-control-label">{{ 'site.cp.teams.sshKeys.add.form.name' | language }}</label>
                                                            <input name="name" required type="text"
                                                                   class="form-control form-control-prepend"
                                                                   id="input-name"
                                                                   placeholder="root@{{ config['name'] }}">
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            <label for="input-key"
                                                                   class="form-control-label">{{ 'site.cp.teams.sshKeys.add.form.publicKey' | language }}</label>
                                                            <textarea name="key" required type="text"
                                                                      class="form-control form-control-prepend"
                                                                      id="input-key" rows="10"
                                                                      placeholder="ssh-rsa AAAA...."></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">{{ 'general.modal.closeBtn' | language }}</button>
                                                    <button type="submit"
                                                            class="btn btn-primary">{{ 'general.modal.createBtn' | language }}</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    {% for key, value in sshKeys %}
                                        <div class="col-md-6">
                                            <div class="card card-fluid">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <span class="h6">{{ value['user']['name'] }}</span>
                                                        </div>
                                                        <div class="text-right">
                                                            <div class="actions mr-n2">
                                                                <form method="post">
                                                                    <input type="hidden" name="action"
                                                                           value="removeSSHKey">
                                                                    <input type="hidden" name="key_id"
                                                                           value="{{ key }}">
                                                                    <input type="hidden" name="csrf" value="{{ csrf }}">
                                                                    <button type="submit" class="btn"><i
                                                                                class="fa-solid fa-trash-can"></i>
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="custom-control custom-checkbox">
                                                        <input required type="checkbox" class="custom-control-input"
                                                               name="key" id="{{ key }}"
                                                               onchange="toggleAutoInstall(this);"
                                                               {% if value['autoInstall'] %}checked{% endif %} >
                                                        <label class="custom-control-label h6"
                                                               for="{{ key }}">{{ value['name'] }}
                                                            <p class="text-sm">{{ value['fingerPrint'] }}</p>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <br><br>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% include '/general/footer.twig' %}