{% include '/general/header.twig' %}
{% include 'cp/nav.twig' %}
<section class="slice slice-sm bg-section-secondary">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-9 order-lg-2">
            <!-- ACTION MESSAGE -->

            {% include '/general/actionMessage.twig' %}

            <div class="row">
              <div class="col-lg-12">
                <div class="actions-toolbar py-2 mb-4">
                  <h5 class="mb-1">{{ 'site.cp.settings.notification' | language }}</h5>
                  <p class="text-sm text-muted mb-0">{{ 'site.cp.settings.notification.description' | language }}</p>
                </div>

                <form method="post">
                  <input type="hidden" name="action" value="saveNotification">
                  <input type="hidden" name="csrf" value="{{ csrf }}">

                  <div class="card">
                    <div class="list-group list-group-flush">
                      <div class="list-group-item d-flex w-100 justify-content-between">
                        <div>
                          <h6
                            class="font-weight-light mb-1">{{ 'site.cp.settings.notification.type.1' | language }}</h6>
                          <span
                            class="text-sm text-muted">{{ 'site.cp.settings.notification.type.1.description' | language }}</span>
                        </div>
                        <div>
                          <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="shop-notification-1" name="type[]"
                                   value="newsletter"
                                   onChange="this.form.submit()" {% if "newsletter" in userData['notification'] %} checked {% endif %}>
                            <label class="custom-control-label" for="shop-notification-1"></label>
                          </div>
                        </div>
                      </div>
                      <div class="list-group-item d-flex w-100 justify-content-between">
                        <div>
                          <h6
                            class="font-weight-light mb-1">{{ 'site.cp.settings.notification.type.2' | language }}</h6>
                          <span
                            class="text-sm text-muted">{{ 'site.cp.settings.notification.type.2.description' | language }}</span>
                        </div>
                        <div>
                          <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="shop-notification-2" name="type[]"
                                   value="deviceInfo"
                                   onChange="this.form.submit()" {% if "deviceInfo" in userData['notification'] %} checked {% endif %}>
                            <label class="custom-control-label" for="shop-notification-2"></label>
                          </div>
                        </div>
                      </div>
                      <div class="list-group-item d-flex w-100 justify-content-between">
                        <div>
                          <h6
                            class="font-weight-light mb-1">{{ 'site.cp.settings.notification.type.3' | language }}</h6>
                          <span
                            class="text-sm text-muted">{{ 'site.cp.settings.notification.type.3.description' | language }}</span>
                        </div>
                        <div>
                          <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="shop-notification-3" name="type[]"
                                   value="ipInfo"
                                   onChange="this.form.submit()"{% if "ipInfo" in userData['notification'] %} checked {% endif %}>
                            <label class="custom-control-label" for="shop-notification-3"></label>
                          </div>
                        </div>
                      </div>
                      <div class="list-group-item d-flex w-100 justify-content-between">
                        <div>
                          <h6
                            class="font-weight-light mb-1">{{ 'site.cp.settings.notification.type.4' | language }}</h6>
                          <span
                            class="text-sm text-muted">{{ 'site.cp.settings.notification.type.4.description' | language }}</span>
                        </div>
                        <div>
                          <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="shop-notification-4" name="type[]"
                                   value="statusInfo"
                                   onChange="this.form.submit()" {% if "statusInfo" in userData['notification'] %} checked {% endif %}>
                            <label class="custom-control-label" for="shop-notification-4"></label>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          {% include 'cp/settings/nav.twig' %}
        </div>
      </div>
    </div>
  </div>
</section>
{% include '/general/footer.twig' %}