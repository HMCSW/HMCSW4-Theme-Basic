<div class="container">
    <footer class="py-5">
        <div class="row justify-content-center">
            <hr />
            <div class="col-6 col-md-2 mb-3">
                <h5>{{ 'footer.aboutUs' | language }}</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a class="nav-link p-0 text-muted" href="{{ url }}/news">{{ 'footer.aboutUs.news' | language }}</a></li>
                    {% if config['service']['statuspage']['enabled'] != false %}
                        <li class="nav-item mb-2"><a class="nav-link p-0 text-muted" href="{{ url }}/status">{{ 'footer.aboutUs.status' | language }}</a></li>
                    {% endif %}

                    {% if config['service']['faq']['enabled'] != false %}
                        <li class="nav-item mb-2"><a class="nav-link p-0 text-muted" href="{{ url }}/faq">{{ 'footer.aboutUs.faq' | language }}</a></li>
                    {% endif %}
                </ul>
            </div>

            <div class="col-6 col-md-2 mb-3">
                <h5>{{ 'footer.products' | language }}</h5>
                <ul class="nav flex-column">
                    {% for type in products %}
                        <li class="nav-item mb-2"><a class="nav-link p-0 text-muted" href="{{ url }}/p/{{ type['type'] }}">{{ type['name'] }}</a></li>
                    {% endfor %}
                </ul>
            </div>

            <div class="col-6 col-md-2 mb-3">
                <h5>{{ 'footer.legal' | language }}</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a class="nav-link p-0 text-muted" href="{{ url }}/legal/imprint">{{ 'footer.legal.imprint' | language }}</a></li>
                    <li class="nav-item mb-2"><a class="nav-link p-0 text-muted" href="{{ url }}/legal/privacy">{{ 'footer.legal.privacy' | language }}</a></li>
                    <li class="nav-item mb-2"><a class="nav-link p-0 text-muted" href="{{ url }}/legal/terms">{{ 'footer.legal.terms' | language }}</a></li>
                    <li class="nav-item mb-2"><a class="nav-link p-0 text-muted" href="{{ url }}/legal/withdrawal">{{ 'footer.legal.withdrawal' | language }}</a></li>
                </ul>
            </div>

        </div>

        <div class="d-flex flex-column flex-sm-row justify-content-between py-4 my-4 border-top">
            <div class=col-md-4>
                <div class="copyright text-sm font-weight-bold text-center text-md-left">&copy; {{ copyrightYear }} <a
                            href="{{ url }}" class=font-weight-bold target=_blank>{{ name }}</a>. All rights reserved
                </div>
            </div>
            <div class=col-md-4>
                <div class="copyright text-sm font-weight-bold text-center">
                    <div class="dropdown">
                        <a class="nav-link" href="#" role="button" data-toggle="dropdown" aria-haspopup="true"
                           aria-expanded="false" data-offset="0,10">
                            <span class="d-none d-lg-inline-block">{{ selectLang['current']['value'] }}</span>
                            <span class="d-lg-none">{{ selectLang['current']['value'] }}</span>
                        </a>
                        <ul class="dropdown-menu text-black">
                            {% for key, value in selectLang['all'] %}
                                <li>
                                    <a class="dropdown-item text-black" title="{{ key }}"
                                       href="{{ currentUrl }}?G_action=setLanguage&language={{ key }}">
                                        <span>{{ value['value'] }} ({{ key }})</span>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                </div>

            </div>

            <div class=col-md-4>
                <div class="copyright text-sm font-weight-bold text-center text-md-right">Powered by <a
                            href="{{ url }}/hmcsw" class=font-weight-bold target=_blank>HMCSW</a> {{ version }}</div>
            </div>
        </div>
    </footer>
</div>

<script src="{{ url }}/assets/js/cookieconsent.min.js"></script>


<script data-cfasync="false" src="{{ url }}/assets/js/initServiceWorker.js"></script>
<script src="{{ url }}/assets/libs/jquery/dist/jquery.min.js"></script>
<script src="{{ url }}/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="{{ url }}/assets/libs/svg-injector/dist/svg-injector.min.js"></script>
<script src="{{ url }}/assets/libs/in-view/dist/in-view.min.js"></script>
<script src="{{ url }}/assets/libs/sticky-kit/dist/sticky-kit.min.js"></script>
<script src="{{ url }}/assets/libs/imagesloaded/imagesloaded.pkgd.min.js"></script>
<script src="{{ url }}/assets/libs/@fancyapps/fancybox/dist/jquery.fancybox.js"></script>
<script src="{{ url }}/assets/libs/typed.js/lib/typed.min.js"></script>
<script src="{{ url }}/assets/libs/jquery-mask-plugin/dist/jquery.mask.min.js"></script>
{% if theme['fontAwesome'] == false %}
  <script src="{{ url }}/assets/libs/@fortawesome/fontawesome-free/all/all.min.js?version={{ version }}"></script>
{% else %}
  <script src="{{ theme['fontAwesome'] }}/js/all.min.js?version={{ version }}"></script>
{% endif %}

<script src="{{ url }}/assets/libs/bootstrap-notify/bootstrap-notify.min.js"></script>
<link rel="stylesheet" href="{{ url }}/assets/libs/animate.css/animate.min.css">
<script>
  function sendNotify(message, status){
      var notify = $.notify(decodeURI(message).replace( /\+/g, ' ' ), {
          type: status,
          allow_dismiss: true,
      });
  }

</script>

{{ javaScript['footer']|raw }}

<script>
    /* MOVE modal body:
        All HTML code with the class modalBodyToMove
        must move in div identifier moveModalHere (div in the generic header)
        to move them out of everything (specially the HTML tables)
    */
    var elements = document.querySelectorAll('.modal');
    var classCount = elements.length;
    console.log("Number of class modalBodyToMove: "+classCount);
    if (classCount > 0){
        for(var i = 0; i < elements.length; i++) {
            if(!elements[i].classList.contains("modal-no-move")) {
                document.getElementById('moveModalHere').appendChild(elements[i])
            }
        }
    }
</script>
